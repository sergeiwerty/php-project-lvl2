{
    "name": "hexlet/code",
    "description": "Gendiff is a program for calculating the differences between two data structures",
    "license": "MIT",
    "scripts": {
        "test": "phpunit tests"
    },
    "autoload": {
        "files": [
            "src/Differ.php",
            "src/Utils.php",
            "src/Parsers/Parser.php",
            "src/Differ/Builder.php",
            "src/Formatters.php",
            "src/Formatters/stylishFormatter.php",
            "src/Formatters/plainFormatter.php",
            "src/Formatters/JSONFormatter.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Differ\\Tests\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "Sergey Dishli",
            "email": "dshl.srp@gmail.com"
        }
    ],
    "bin": [
        "bin/gendiff"
    ],
    "require": {
        "docopt/docopt": "^1.0",
        "lstrojny/functional-php": "^1.17",
        "phpunit/php-code-coverage": "^9.2",
        "symfony/yaml": "^6.1.2"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "squizlabs/php_codesniffer": "3.*"
    }
}
